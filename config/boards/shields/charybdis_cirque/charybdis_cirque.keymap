        };

        mouse_layer {
            label = "MSE";
            bindings = <
 &none        &none        &none        &none        &none        &none                 &none        &none        &none        &none        &none        &none
 &trans       &trans       &trans       &trans       &trans       &trans                &none        &none        &none        &none        &none        &none
 &trans       &trans       &trans       &trans       &trans       &trans                &none        &mkp LCLK    &mo 5        &mkp RCLK    &none        &none
