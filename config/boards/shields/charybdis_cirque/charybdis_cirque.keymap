   &none        &none        &none     &none     &none      &none              &none     &kp N1     &kp N2     &kp N3     &none      &none
                             &none     &none     &kp SPACE  &kp LGUI                     &kp ENTER  &kp N0     &kp DOT
                             &none     &none     &none      &none                        &kp BSPC   &none      &none
            >;
               trackball-bindings = <&tsl>;
        };

        symbol_layer {
            label = "SYMBOL";
            bindings = <
             &none         &none         &none     &none     &none     &none          &none     &none     &none     &none      &none     &none
             &kp C_VOL_UP  &kp C_VOL_DN  &kp AMPS  &kp STAR  &kp LPAR  &kp RPAR       &none     &none     &none     &none      &none     &none
             &kp C_BRI_UP  &kp C_BRI_DN  &kp DLLR  &kp PRCNT &kp CARET &kp UNDER      &kp LEFT  &kp DOWN  &kp UP    &kp RIGHT  &none     &none
             &none         &kp GRAVE     &kp EXCL  &kp AT    &kp HASH  &kp EQUAL      &none     &none     &none     &none      &none     &none
