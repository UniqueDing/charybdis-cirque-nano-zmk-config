    keymap {
       compatible = "zmk,keymap";
       default_layer {
            label = "DEFAULT";
            bindings = <
   &kp GRAVE      &kp N1     &kp N2     &kp N3     &kp N4     &kp N5         &kp N6     &kp N7     &kp N8     &kp N9     &kp N0     &kp BSPC
   &lt 2 TAB      &kp Q      &kp W      &kp E      &kp R      &kp T          &kp Y      &kp U      &kp I      &kp O      &kp P      &kp BSLH
   &mt LCTRL ESC  &kp A      &kp S      &kp D      &kp F      &kp G          &kp H      &kp J      &kp K      &kp L      &kp SEMI   &kp SQT
   &kp LSHIFT     &kp Z      &kp X      &kp C      &kp V      &kp B          &kp N      &kp M      &kp COMMA  &kp DOT    &kp FSLH   &lt 4 LBKT
                             &kp LBKT   &kp RBKT   &kp SPACE  &kp LGUI                  &kp ENTER  &kp MINUS  &kp EQUAL
                             &mo 1  &kp LCTRL &kp LALT   &kp LC(LSHIFT)                 &kp BSPC   &kp LC(SPACE) &mo 3
            >;
                trackball-bindings = <&tmv>;
        };


          number_layer {
            label = "NUMBER";
            bindings = <
   &kp F1       &kp F2       &kp F3    &kp F4    &kp F5     &kp F6             &kp F7    &kp F8     &kp F9     &kp F10    &kp F11    &kp F12
